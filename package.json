{
  "name": "abbele",
  "version": "0.0.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:example": "turbo run dev --filter=@abbele/example",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish": "pnpm beachball publish"
