{
  "name": "abbele",
  "version": "0.0.2",
  "scripts": {
    "build": "lerna run build --parallel",
    "dev": "lerna run dev --parallel",
    "dev:example": "lerna run dev --scope=@abbele/example",
    "lint": "lerna run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish": "lerna publish --conventional-commits",
    "publish-ci": "lerna publish --conventional-commits --yes"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abbele/monorepo"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@8.15.6",
  "dependencies": {
    "lerna": "^8.2.1"
  },
  "engines": {
    "node": ">=22.13.1",
    "npm": ">=10.5.2"
  }
}
