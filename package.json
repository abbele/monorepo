  "repository": {
    "type": "git",
    "url": "https://github.com/abbele/monorepo"
  },
  "devDependencies": {
    "beachball": "^2.51.0",
    "prettier": "^3.2.5",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@8.15.6"
}
